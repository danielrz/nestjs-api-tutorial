{
  "displayName": "e2e",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "collectCoverage": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": [
    "**/*.{ts,tsx}"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/migration/",
    "/vendor/"
  ]
}
